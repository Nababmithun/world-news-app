<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GellaryActivity.GellaryNewsActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorAccent"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:onClick="backBtn"
                android:paddingTop="10dp"
                android:paddingLeft="6dp"
                android:paddingRight="1dp"
                android:paddingBottom="10dp"
                android:src="@drawable/arrow"
                android:tint="#fff" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/backBtn"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="70dp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gellary"
                    android:textColor="#fff"
                    android:textSize="18dp" />



                <ImageView

                    android:onClick="Rating"
                    android:layout_marginLeft="95dp"
                    android:tint="#fff"
                    android:src="@drawable/starr"
                    android:layout_width="18sp"
                    android:layout_height="18sp"/>

                <ImageView
                    android:onClick="Sharing"
                    android:layout_marginLeft="@dimen/sp22"
                    android:tint="#fff"
                    android:src="@drawable/share"
                    android:layout_width="18sp"
                    android:layout_height="18sp"/>

            </LinearLayout>


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


  <ScrollView
      android:layout_marginTop="70dp"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">






          <LinearLayout
              android:layout_marginTop="0dp"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">



              <ImageView
                  android:id="@+id/pic1"
                  android:layout_marginLeft="9dp"
                  android:src="@drawable/photo"
                  android:layout_width="130dp"
                  android:layout_height="150dp"/>

              <ImageView
                  android:id="@+id/pic2"
                  android:layout_marginLeft="5dp"
                  android:src="@drawable/photo1"
                  android:layout_width="130dp"
                  android:layout_height="150dp"/>
              <ImageView
                  android:layout_marginRight="9dp"
                  android:id="@+id/pic3"
                  android:layout_marginLeft="5dp"
                  android:src="@drawable/photo2"
                  android:layout_width="130dp"
                  android:layout_height="150dp"/>

          </LinearLayout>


          <LinearLayout
              android:layout_marginTop="@dimen/sp22"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">



              <ImageView
                  android:layout_marginLeft="9dp"
                  android:id="@+id/pic4"
                  android:src="@drawable/pic4"
                  android:layout_width="130dp"
                  android:layout_height="150dp"/>


              <ImageView
                  android:id="@+id/pic5"
                  android:layout_marginLeft="5dp"
                  android:src="@drawable/pic5"
                  android:layout_width="130dp"
                  android:layout_height="150dp"/>
              <ImageView

                  android:layout_marginRight="9dp"
                  android:id="@+id/pic6"
                  android:layout_marginLeft="5dp"
                  android:src="@drawable/pic6"
                  android:layout_width="130dp"
                  android:layout_height="150dp"/>

          </LinearLayout>

          <LinearLayout
              android:layout_marginTop="@dimen/sp22"

              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">



              <ImageView
                  android:layout_marginLeft="9dp"
                  android:id="@+id/pic7"
                  android:src="@drawable/pic7"
                  android:layout_width="130dp"
                  android:layout_height="150dp"/>

              <ImageView
                  android:id="@+id/pic8"
                  android:layout_marginLeft="5dp"
                  android:src="@drawable/pic88"
                  android:layout_width="130dp"
                  android:layout_height="150dp"/>
              <ImageView
                  android:layout_marginRight="9dp"
                  android:id="@+id/pic9"
                  android:layout_marginLeft="5dp"
                  android:src="@drawable/pic9"
                  android:layout_width="130dp"
                  android:layout_height="150dp"/>

          </LinearLayout>
          <LinearLayout
              android:layout_marginTop="@dimen/sp22"

              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">



              <ImageView
                  android:id="@+id/pic10"
                  android:layout_marginLeft="9dp"
                  android:src="@drawable/pic10"
                  android:layout_width="130dp"
                  android:layout_height="150dp"/>

              <ImageView
                  android:id="@+id/pic11"
                  android:layout_marginLeft="5dp"
                  android:src="@drawable/pic11"
                  android:layout_width="130dp"
                  android:layout_height="150dp"/>
              <ImageView
                  android:layout_marginRight="9dp"
                  android:id="@+id/pic12"
                  android:layout_marginLeft="5dp"
                  android:src="@drawable/pic12"
                  android:layout_width="130dp"
                  android:layout_height="150dp"/>

          </LinearLayout>





      </LinearLayout>


  </ScrollView>

</RelativeLayout>