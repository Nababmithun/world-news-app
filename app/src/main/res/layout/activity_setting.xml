<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SettingActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorAccent"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:onClick="backBtn"
                android:paddingTop="10dp"
                android:paddingLeft="6dp"
                android:paddingRight="1dp"
                android:paddingBottom="10dp"
                android:src="@drawable/arrow"
                android:tint="#fff" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/backBtn"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="90dp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp18" />



                <ImageView
                    android:onClick="Rating"
                    android:layout_marginLeft="90dp"
                    android:tint="#fff"
                    android:src="@drawable/starr"
                    android:layout_width="18sp"
                    android:layout_height="18sp"/>

                <ImageView
                    android:onClick="Sharing"
                    android:layout_marginLeft="@dimen/sp22"
                    android:tint="#fff"
                    android:src="@drawable/share"
                    android:layout_width="18sp"
                    android:layout_height="18sp"/>

            </LinearLayout>


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <TextView
            android:textColor="@color/colorAccent"
            android:fontFamily="serif"
            android:textSize="19dp"
            android:layout_margin="15dp"
            android:text=" | Our story"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <TextView
            android:layout_marginLeft="@dimen/sp20"
            android:layout_marginRight="@dimen/sp20"
            android:text="Bangladesh is known as a land of calamities. But the people of this nation are also known for their solidarity, cooperation and empathy. There is a desire among the people to extend their hands in assistance to others whenever disasters strikes at a national or even, a personal level. World News Bd works in the media, diligently providing information to the people. To provide a voice to the same people who want to help others in distress, the World News Bd Trust was established."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>






        <TextView
            android:textColor="@color/colorAccent"

            android:fontFamily="serif"
            android:textSize="19dp"
            android:layout_margin="15dp"
            android:text=" | Purpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginLeft="@dimen/sp20"
            android:layout_marginRight="@dimen/sp20"
            android:text="Maintaining its 'non-profit' stature, the World News Bd Trust looks forward to working with people whenever mishaps, tragedies pose a threat of a ruthless end to their hopes, dreams and aspirations. The Trust aims to work with hapless victims of Acid Violence; it works towards raising awareness against substance abuse amongthe youth.."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:textColor="@color/colorAccent"

            android:fontFamily="serif"
            android:textSize="19dp"
            android:layout_margin="15dp"
            android:text=" | Funding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




        <TextView
            android:text="@string/goal"
            android:layout_marginLeft="@dimen/sp20"
            android:layout_marginRight="@dimen/sp20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>






</RelativeLayout>
